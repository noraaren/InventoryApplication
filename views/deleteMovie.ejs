<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Delete Movie</title>
  <style>
    :root {
      --bg: #0f1115;
      --card: #151923;
      --muted: #8a94a6;
      --text: #e8ecf3;
      --accent: #5b9cff;
      --danger: #ff6b6b;
      --border: #232a36;
      --shadow: 0 10px 30px rgba(0,0,0,.35);
      --radius-xl: 16px;
      --radius-lg: 12px;
      --radius: 10px;
    }
    
    * { box-sizing: border-box; }
    html, body { height: 100%; }
    
    body {
      margin: 0;
      font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans";
      background: radial-gradient(1200px 800px at 10% 0%, #0b0d12, var(--bg));
      color: var(--text);
      min-height: 100vh;
      padding: 24px;
    }
    
    .container {
      max-width: 600px;
      margin: 0 auto;
    }
    
    .header {
      text-align: center;
      margin-bottom: 32px;
    }
    
    h1 {
      margin: 0;
      font-size: clamp(28px, 4vw, 42px);
      font-weight: 700;
      letter-spacing: 0.3px;
    }
    
    .subtitle {
      color: var(--muted);
      margin-top: 8px;
    }
    
    .card {
      background: linear-gradient(180deg, rgba(255,255,255,.03), rgba(255,255,255,.01));
      border: 1px solid var(--border);
      border-radius: var(--radius-xl);
      box-shadow: var(--shadow);
      overflow: hidden;
    }
    
    .card-header {
      padding: 16px 22px;
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .pill {
      font-size: 12px;
      color: var(--danger);
      background: rgba(255,107,107,.12);
      padding: 6px 10px;
      border: 1px solid rgba(255,107,107,.25);
      border-radius: 999px;
    }
    
    .card-body {
      padding: 22px;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    label {
      font-size: 13px;
      color: var(--muted);
      display: inline-block;
      margin-bottom: 8px;
      letter-spacing: 0.2px;
    }
    
    select {
      width: 100%;
      background: #0e1320;
      color: var(--text);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 12px 14px;
      outline: none;
      transition: border .2s, box-shadow .2s;
    }
    
    select:focus {
      border-color: var(--danger);
      box-shadow: 0 0 0 3px rgba(255,107,107,.15);
    }
    
    .help {
      font-size: 12px;
      color: var(--muted);
      margin-top: 6px;
    }
    
    .actions {
      display: flex;
      gap: 12px;
      justify-content: flex-end;
      margin-top: 24px;
    }
    
    .btn {
      appearance: none;
      border: 1px solid var(--border);
      background: #0e1320;
      color: var(--text);
      padding: 11px 16px;
      border-radius: 10px;
      cursor: pointer;
      transition: transform .02s, border .2s, box-shadow .2s, background .2s;
      text-decoration: none;
      display: inline-block;
    }
    
    .btn:hover { border-color: #2d3546; }
    .btn:active { transform: translateY(1px); }
    
    .btn-danger {
      background: linear-gradient(180deg, #dc2626, #b91c1c);
      border-color: #991b1b;
      color: white;
      box-shadow: 0 8px 20px rgba(220,38,38,.25);
    }
    
    .btn-danger:hover { filter: brightness(1.05); }
    
    .btn-secondary {
      background: #374151;
      border-color: #4b5563;
    }
    
    .btn-secondary:hover { background: #4b5563; }
    
    .empty-state {
      text-align: center;
      padding: 40px 20px;
      color: var(--muted);
    }
    
    .empty-state h3 {
      margin: 0 0 12px 0;
      color: var(--text);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Delete Movie</h1>
      <p class="subtitle">Select a movie to remove from your collection</p>
    </div>
    
    <% if (movies && movies.length > 0) { %>
      <div class="card">
        <div class="card-header">
          <span class="pill">Danger Zone</span>
          <span class="help">This action cannot be undone</span>
        </div>
        
        <div class="card-body">
          <form action="/delete-movie" method="POST" id="deleteForm">
            <div class="form-group">
              <label for="movieSelect">Select Movie to Delete</label>
              <select id="movieSelect" name="MovieID" required>
                <option value="">Choose a movie...</option>
                <% movies.forEach(movie => { %>
                  <option value="<%= movie.movieid %>">
                    <%= movie.title %> 
                    <% if (movie.year) { %> (<%= movie.year %>)<% } %>
                    <% if (movie.rating) { %> - â˜… <%= movie.rating %><% } %>
                  </option>
                <% }); %>
              </select>
              <div class="help">This will permanently remove the selected movie from your collection.</div>
            </div>
            
            <div class="actions">
              <a href="/" class="btn btn-secondary">Cancel</a>
              <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>Delete Movie</button>
            </div>
          </form>
        </div>
      </div>
    <% } else { %>
      <div class="card">
        <div class="card-body">
          <div class="empty-state">
            <h3>No movies to delete</h3>
            <p>Your collection is empty. Add some movies first!</p>
            <a href="/movies/new" class="btn" style="margin-top: 16px;">Add Your First Movie</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    const movieSelect = document.getElementById('movieSelect');
    const deleteBtn = document.getElementById('deleteBtn');
    const deleteForm = document.getElementById('deleteForm');
    
    // Enable/disable delete button based on selection
    if (movieSelect && deleteBtn) {
      movieSelect.addEventListener('change', function() {
        deleteBtn.disabled = !this.value;
      });
    }
    
    // Confirmation before delete
    if (deleteForm) {
      deleteForm.addEventListener('submit', function(e) {
        const selectedOption = movieSelect.options[movieSelect.selectedIndex];
        const movieTitle = selectedOption.text;
        
        if (!confirm(`Are you sure you want to delete "${movieTitle}"? This action cannot be undone.`)) {
          e.preventDefault();
        }
      });
    }
  </script>
</body>
</html>
