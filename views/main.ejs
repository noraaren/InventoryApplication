<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Inventory</title>
  <style>
    :root {
      --bg: #0f1115;
      --card: #151923;
      --muted: #8a94a6;
      --text: #e8ecf3;
      --accent: #5b9cff;
      --accent-2: #7ee787;
      --border: #232a36;
      --shadow: 0 10px 30px rgba(0,0,0,.35);
      --radius-xl: 16px;
      --radius-lg: 12px;
      --radius: 10px;
    }
    
    * { box-sizing: border-box; }
    html, body { height: 100%; }
    
    body {
      margin: 0;
      font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans";
      background: radial-gradient(1200px 800px at 10% 0%, #0b0d12, var(--bg));
      color: var(--text);
      min-height: 100vh;
      padding: 24px;
    }
    
    .container {
      max-width: 1400px;
      margin: 0 auto;
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 32px;
    }
    
    h1 {
      margin: 0;
      font-size: clamp(28px, 4vw, 42px);
      font-weight: 700;
      letter-spacing: 0.3px;
    }
    
    .subtitle {
      color: var(--muted);
      margin-top: 8px;
    }
    
    .btn {
      appearance: none;
      border: 1px solid var(--border);
      background: linear-gradient(180deg, #2b62ff, #2149c9);
      color: white;
      padding: 12px 20px;
      border-radius: var(--radius);
      text-decoration: none;
      cursor: pointer;
      transition: transform .02s, filter .2s;
      box-shadow: 0 8px 20px rgba(43,98,255,.25);
    }
    
    .btn:hover { filter: brightness(1.05); }
    .btn:active { transform: translateY(1px); }
    
    .movies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 24px;
    }
    
    .movie-card {
      background: linear-gradient(180deg, rgba(255,255,255,.03), rgba(255,255,255,.01));
      border: 1px solid var(--border);
      border-radius: var(--radius-xl);
      box-shadow: var(--shadow);
      overflow: hidden;
      transition: transform .2s, box-shadow .2s;
    }
    
    .movie-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px rgba(0,0,0,.4);
    }
    
    .movie-poster {
      width: 100%;
      height: 400px;
      background: #0d121d;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }
    
    .movie-poster img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .movie-poster.no-image {
      color: var(--muted);
      font-size: 14px;
    }
    
    .movie-info {
      padding: 20px;
    }
    
    .movie-title {
      font-size: 20px;
      font-weight: 600;
      margin: 0 0 8px 0;
      line-height: 1.3;
    }
    
    .movie-year {
      color: var(--muted);
      font-size: 14px;
      margin-bottom: 12px;
    }
    
    .movie-description {
      color: var(--muted);
      font-size: 14px;
      line-height: 1.5;
      margin-bottom: 16px;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .movie-meta {
      display: flex;
      gap: 12px;
      margin-bottom: 16px;
    }
    
    .genre-tag {
      background: rgba(91,156,255,.15);
      color: var(--accent);
      border: 1px solid rgba(91,156,255,.25);
      padding: 4px 8px;
      border-radius: 999px;
      font-size: 12px;
    }
    
    .rating {
      background: rgba(126,231,135,.15);
      color: var(--accent-2);
      border: 1px solid rgba(126,231,135,.25);
      padding: 4px 8px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 600;
    }
    
    .actors {
      color: var(--muted);
      font-size: 13px;
      line-height: 1.4;
    }
    
    .actors strong {
      color: var(--text);
    }
    
    .empty-state {
      text-align: center;
      padding: 80px 20px;
      color: var(--muted);
    }
    
    .empty-state h2 {
      margin: 0 0 12px 0;
      color: var(--text);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div>
        <h1>Movie Inventory</h1>
        <p class="subtitle">Your personal movie collection</p>
      </div>
      <a href="/movies/new" class="btn">+ Add Movie</a>
    </div>
    
    <% if (movies && movies.length > 0) { %>
      <div class="movies-grid">
        <% movies.forEach(movie => { %>
          <div class="movie-card">
            <div class="movie-poster <%= !movie.image ? 'no-image' : '' %>">
              <% if (movie.image) { %>
                <img src="<%= movie.image %>" alt="<%= movie.title %> poster" onerror="this.closest('.movie-poster').classList.add('no-image'); this.closest('.movie-poster').innerHTML='No Image Available';">
              <% } else { %>
                No Image Available
              <% } %>
            </div>
            
            <div class="movie-info">
              <h3 class="movie-title"><%= movie.title %></h3>
              <% if (movie.year) { %>
                <div class="movie-year"><%= movie.year %></div>
              <% } %>
              
              <% if (movie.description) { %>
                <p class="movie-description"><%= movie.description %></p>
              <% } %>
              
              <div class="movie-meta">
                <% if (movie.genre) { %>
                  <span class="genre-tag"><%= movie.genre %></span>
                <% } %>
                <% if (movie.rating) { %>
                  <span class="rating">â˜… <%= movie.rating %></span>
                <% } %>
              </div>
              
              <% if (movie.actors && movie.actors.length > 0) { %>
                <div class="actors">
                  <strong>Cast:</strong> <%= movie.actors.join(', ') %>
                </div>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <h2>No movies yet</h2>
        <p>Start building your collection by adding your first movie!</p>
        <a href="/" class="btn">+ Add Your First Movie</a>
      </div>
    <% } %>
  </div>

  <script>
    // Add Movie button click handler
    const addMovieButtons = document.querySelectorAll('.btn');
    
    addMovieButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = '/movies/new';
      });
    });
  </script>
</body>
</html>
